#:kivy 1.9.1
#:import randint random.randint
#:import to_rgba kivy.utils.get_color_from_hex
#:import _ mafiademonstration.mafiademonstration._

#:set link_clr '222222'
#:set kivy_github 'https://github.com/kivy/kivy'
#:set cookiecutter_github 'https://github.com/audreyr/cookiecutter'
#:set cookiedozer_github 'https://github.com/hackebrot/cookiedozer'
#:set repo_github 'https://github.com/zenohm/mafiademonstration'

#:set fsize 15

<ActionList>:
    Button:
        id: main
        text: "Test"
        on_release: drop.open()
    DropDown:
        id: drop
        Button:
            text: 'My first Item'
            size_hint_y: None
            height: 44
            on_release: root.select('item1')
        Label:
            text: 'Unselectable item'
            size_hint_y: None
            height: 44
        Button:
            text: 'My second Item'
            size_hint_y: None
            height: 44
            on_release: root.select('item2')
    # trick to not lost the Dropdown instance
    # Dropdown itself is not really made to be used in kv.

<Player>:
    name: 'player'
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: to_rgba('9E9E9E')
        Rectangle:
            # self here refers to the widget i.e BoxLayout
            pos: self.pos
            size: self.size
    Label:
        id: player_label
        color: to_rgba('212121')
        text: self.parent.name
        valign: 'middle'
# droppable_zone_objects: [p2, p3, p4, p5, p6, p7, p8]
    #ActionList:
    Spinner:
        text: 'Action'
        color: to_rgba('212121')
        values: 'Accuse', 'Suspect', 'Clear'


AnchorLayout:
    canvas.before:
        Color:
            rgba: to_rgba('F5F5F5')
        Rectangle:
            pos: self.pos
            size: self.size

    MenuSpawner:
        timeout: .8

    CircularLayout:
        id: circular_layout
        direction: 'ccw'
        inner_radius_hint: 1
        outer_radius_hint: 1.5
        size_hint_x: 0.6
        size_hint_y: 0.6
        start_angle: 60

        Player:
            name: 'player 1'
        Player:
            name: 'player 2'
        Player:
            name: 'player 3'
        Player:
            name: 'player 4'
        Player:
            name: 'player 5'
        Player:
            name: 'player 6'
